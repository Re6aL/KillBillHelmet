<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended</li>
        </mods>
        <match Class="PatchOperationSequence">
			<operations>
				
				<!--========================= Helmets ========================-->
				<!--Material>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
						defName="RNApparel_M1Helmet_Vietnam" or
						defName="RNApparel_6B48_Helmet"]/stuffCategories</xpath>
					<value>
						<stuffCategories>
							<li>Steeled</li>
						</stuffCategories>
					</value>
				</li>

				<!-Kill Bill Helmet-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Apparel_KillBillHelmet"]/statBases</xpath>
					<value>
						<Bulk>2.8</Bulk>
						<WornBulk>1</WornBulk>						
					</value>
				</li>

				<li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_KillBillHelmet"]/statBases/Flammability</xpath>
                    <value>
                        <Flammability>0.5</Flammability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_KillBillHelmet"]/statBases/MaxHitPoints</xpath>
                    <value>
                        <MaxHitPoints>200</MaxHitPoints>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_KillBillHelmet"]/statBases/ArmorRating_Sharp</xpath>
                    <value>
                        <ArmorRating_Sharp>10</ArmorRating_Sharp>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_KillBillHelmet"]/statBases/ArmorRating_Blunt</xpath>
                    <value>
                        <ArmorRating_Blunt>22</ArmorRating_Blunt>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_KillBillHelmet"]/equippedStatOffsets</xpath>
                    <value>
                        <equippedStatOffsets>
                            <AimingAccuracy>-0.15</AimingAccuracy>
                            <ToxicSensitivity>-0.10</ToxicSensitivity>
                            <SmokeSensitivity>-0.10</SmokeSensitivity>
                            <SocialImpact>0.10</SocialImpact>
                        </equippedStatOffsets>
                    </value>
                </li>

				<!--========================== Body Armors =====================================-->

				<!--Riot Suit->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
						defName="RNApparel_RiotSuit_SecPro"]/statBases/Mass</xpath>
					<value>
						<Mass>18</Mass>
						<Bulk>40</Bulk>
						<WornBulk>10</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
						defName="RNApparel_RiotSuit_SecPro"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>10</ArmorRating_Sharp>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
						defName="RNApparel_RiotSuit_SecPro"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>26</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
							defName="RNApparel_RiotSuit_SecPro"]/apparel/layers</xpath>
					<value>
						<layers>
							<li>Middle</li>
							<li>Shell</li>
						</layers>
					</value>
				</li-->
				
			</operations>
		</match>
	</Operation>
</Patch>